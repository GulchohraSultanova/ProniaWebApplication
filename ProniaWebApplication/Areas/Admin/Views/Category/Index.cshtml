@using ProniaWebApplication.Models
@model List<Category>
@{
    int count = 0;
}
<h2>
    <div class="container">
        Categories

        <a class="btn btn-primary" asp-action="Create"> Create</a>
    </div>
</h2>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">ProductCount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td> @item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Products.Count()</td>
                    <td > <a class="btn btn-warning" asp-action="Update" asp-controller="category" asp-route-id=@item.Id>Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="category" asp-route-id=@item.Id>Delete</a>
                        </td>
                   


                </tr>
            }


            </tr>
        </tbody>
    </table>
</div>